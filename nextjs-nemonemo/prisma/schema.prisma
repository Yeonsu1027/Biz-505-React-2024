
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 회원정보 테이블
model Member {
  m_id   String   @id
  m_pw   String
  m_nick String?
}

// 5x5 정답테이블
model Nemo {
  n_num      Int
  n_row_num  Int
  n_block1   Int
  n_block2   Int
  n_block3   Int
  n_block4   Int
  n_block5   Int
  n_block6   Int
  n_block7   Int
  n_block8   Int
  n_block9   Int
  n_block10  Int
  n_block11  Int
  n_block12  Int
  n_block13  Int
  n_block14  Int
  n_block15  Int

  @@id([n_num, n_row_num])
}

// 유저의 플레이정보 (+ 회원아이디)
model NemoPlay {
  p_id      String
  p_num     Int
  p_row_num Int
  p_block1  Int
  p_block2  Int
  p_block3  Int
  p_block4  Int
  p_block5  Int
  p_block6  Int
  p_block7  Int
  p_block8  Int
  p_block9  Int
  p_block10 Int
  p_block11 Int
  p_block12 Int
  p_block13 Int
  p_block14 Int
  p_block15 Int

  @@id([p_id, p_num, p_row_num])
}

// 클리어정보
model Clear {
  c_id    String
  c_level Int
  c_clear Int

  @@id([c_id, c_level])
}

// 대화정보
model Speech {
  s_num     Int    @id @default(autoincrement())
  s_speaker String
  s_message String
}
